javascript:(function(){const USERNAME='your_username_here';const PASSWORD_PREFIX='PWPrefix';const PASSWORD_SUFFIX='##';function pad(num){return num.toString().padStart(2,'0');}function getFirstFriday(year,month){for(let day=1;day<=7;day++){const date=new Date(year,month,day);if(date.getDay()===5)return date;}return new Date(year,month,1);}function getPassword(){const now=new Date();const year=now.getFullYear();const month=now.getMonth();const today=new Date(year,month,now.getDate());const firstFriday=getFirstFriday(year,month);if(today<firstFriday){const prevMonth=month===0?12:month;const prevYear=month===0?year-1:year;return PASSWORD_PREFIX+prevYear+pad(prevMonth)+PASSWORD_SUFFIX;}else{return PASSWORD_PREFIX+year+pad(month+1)+PASSWORD_SUFFIX;}}function fillLogin(){const usernameField=document.querySelector('input[name="login"],input[id="login"]');const passwordField=document.querySelector('input[name="passwd"],input[id="passwd"]');if(!usernameField){alert('Username field not found!');return;}if(!passwordField){alert('Password field not found!');return;}const password=getPassword();usernameField.value=USERNAME;usernameField.dispatchEvent(new Event('input',{bubbles:true}));passwordField.value=password;passwordField.dispatchEvent(new Event('input',{bubbles:true}));console.log('CRRU Login filled - Password: '+password);alert('Login filled!\\nUsername: '+USERNAME+'\\nPassword: '+password);}fillLogin();})();
